#!/usr/bin/env ruby

require_relative '../lib/turn'
board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]
puts "Welcome to Tic Tac Toe!"
display_board(board)
turn(board)

input = gets.strip
index = input_to_index(input)

move(board, index, user_input="X")


display_board(board)

input = gets.strip
index = input_to_index(input)
